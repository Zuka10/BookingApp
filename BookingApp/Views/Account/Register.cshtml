@model BookingApp.DTO.Customer

<!-- Include jQuery and jQuery Validation scripts -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/additional-methods.min.js"></script>

<style>
    .validation-message {
        color: red;
        font-size: 12px;
        margin-top: 4px;
    }
</style>

<h2>Register</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <!-- Include script to initialize client-side validation -->
    <script>
        $(document).ready(function () {
            $("form").validate();
        });
    </script>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.LabelFor(model => model.FirstName)
    @Html.TextBoxFor(model => model.FirstName)
    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "validation-message" })
    <br />

    @Html.LabelFor(model => model.LastName)
    @Html.TextBoxFor(model => model.LastName)
    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "validation-message" })
    <br />

    @Html.LabelFor(model => model.BirthDate)
    @Html.TextBoxFor(model => model.BirthDate, "{0:yyyy-MM-dd}", new { type = "date" })
    @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "validation-message" })
    <br />

    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email)
    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "validation-message" })
    <br />

    @Html.LabelFor(model => model.Password)
    @Html.PasswordFor(model => model.Password)
    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "validation-message" })
    <br />

    @Html.LabelFor(model => model.PersonalNumber)
    @Html.TextBoxFor(model => model.PersonalNumber)
    @Html.ValidationMessageFor(model => model.PersonalNumber, "", new { @class = "validation-message" })
    <br />

    @Html.LabelFor(model => model.Address)
    @Html.TextBoxFor(model => model.Address)
    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "validation-message" })
    <br />

    <input type="submit" value="Register" />
}
